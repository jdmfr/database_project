<h1 class="h3 mb-3 font-weight-normal">Please fill in your details</h1>

<%= form_with(model: group, local: true) do |form| %>
      <% if group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
          <ul>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <label for="" class="col-md-12 control-label">Name</label>
        <%= form.text_field :name ,:class =>"form-control" ,:placeholder => "Groupname" %>
      </div>

      <div class="form-group">
        <label for="" class="col-md-12 control-label">Content</label>
        <%= form.text_area :description, :rows => "4" ,:class=> "col-md-12 form-control" , :placeholder => "Description"%>
      </div>

      <div class="actions">
        <%= form.submit "Register" ,  :class => "btn btn-lg btn-primary btn-block" %>
      </div>
<% end %>

