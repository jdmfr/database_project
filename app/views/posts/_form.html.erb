<%= form_with(model: post, local: true  , :class => "form-group" ) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="" class="col-md-12 control-label">Title</label>
    <%= form.text_field :title , :class => "form-control" , :placeholder => "Title"%>
  </div>

  <div class="form-group">
    <label for="" class="col-md-12 control-label">Content</label>
     
     <%= form.text_area :body ,:rows =>"3" , :class => "col-md-12 form-control" %>
  </div>

  <div class="actions">
     <%=form.submit "Submit", :class => "btn btn-lg btn-primary btn-block" %>
     <%= link_to 'Back', posts_url,:class => "btn btn-sm btn-block"%>
  </div>


<% end %>


